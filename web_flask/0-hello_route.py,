#!/usr/bin/python

from flask import Flask

# Creating an imstance of the flask class
app = flask(__name__)

# Define the route for the root URL
@app.route('/', strict_slashes=False)
def hello_hbnb():
    return "Hello HBNB!"

# Run the application
if __name__ == "__main__":
    app.run(host="0.0.0.0", port=5000)

